@model List<POC.CommonModel.Models.CommonProductQuantityModel>

@if (Model != null && Model.Any())
{
    <form asp-action="AddOrderList" asp-controller="OrderControllerMVC" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <img src="data:image;base64,@Convert.ToBase64String(Model[i].ProductList.ProductImage)"
                                 alt="Product Image" width="50" height="50" />
                        </td>
                        <td>@Model[i].ProductList.Name</td>
                        <td>@Model[i].ProductList.Price.ToString("C")</td>
                        <td>
                           @Model[i].Quantity
                        </td>
                        <td>₹@(Model[i].ProductList.Price * Model[i].Quantity)</td>
                        <input type="hidden" name="[@i].ProductList.ProductId" value="@Model[i].ProductList.ProductId" />
                        <input type="hidden" name="[@i].ProductList.Name" value="@Model[i].ProductList.Name" />
                        <input type="hidden" name="[@i].ProductList.Price" value="@Model[i].ProductList.Price" />
                        <input type="hidden" name="[@i].ProductList.Description" value="@Model[i].ProductList.Description" />
                        <input type="hidden" name="[@i].ProductList.ProductImage" value="@Convert.ToBase64String(Model[i].ProductList.ProductImage)" />
                        <input type="hidden" name="[@i].ProductList.IsAvailable" value="@Model[i].ProductList.IsAvailable" />
                        <input type="hidden" name="[@i].ProductList.IsQuantityAvailable" value="@Model[i].ProductList.IsQuantityAvailable" />
                        <input type="hidden" name="[@i].ProductList.ProductAvailable" value="@Model[i].ProductList.ProductAvailable" />
                        <input type="hidden" name="[@i].UserID" value="@Model[i].UserID" />
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right"><strong>Total Amount:</strong></td>
                    <td><strong>@Model.Sum(item => item.ProductList.Price * item.Quantity).ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>
        <button type="submit" class="btn btn-primary"> Order Now</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}

