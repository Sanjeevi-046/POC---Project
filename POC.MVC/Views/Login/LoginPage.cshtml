@model POC.MVC.Models.LoginModel

@{
    ViewData["Title"] = "Login Page";
}

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginPage" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="Null@null.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" value="empty" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-controller="Login" asp-action="NewUser">Sign Up</a>
            </div>
        </form>
    </div>
</div>
