@model POC.MVC.Models.ProductModel

@{
    ViewData["Title"] = "Create Product";
}

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProductDetail" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input asp-for="ProductImage" class="form-control" required />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <input asp-for="IsAvailable" class="form-control" type="checkbox" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsQuantityAvailable" class="control-label"></label>
                <input asp-for="IsQuantityAvailable" class="form-control" type="checkbox" />
                <span asp-validation-for="IsQuantityAvailable" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="ProductAvailable" class="control-label"></label>
                <input asp-for="ProductAvailable" class="form-control" required />
                <span asp-validation-for="ProductAvailable" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
