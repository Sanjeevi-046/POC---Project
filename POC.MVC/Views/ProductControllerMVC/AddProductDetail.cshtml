@model POC.MVC.Models.ProductModel

@{
    ViewData["Title"] = "Create Product";
}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
    
    </head>
    <body>
    @if (ViewBag.Error != null)
    {
        <div style="color: red;">@ViewBag.Error</div>
    }

    <h1>Create Product</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddProductDetail" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" pattern="[a-zA-Z0-9]+" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" class="form-control" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>
                    <input asp-for="ProductImage" class="form-control" type="file" required />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                @* <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <input asp-for="IsAvailable" class="form-control" type="checkbox" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="IsQuantityAvailable" class="control-label"></label>
                <input asp-for="IsQuantityAvailable" class="form-control" type="checkbox" />
                <span asp-validation-for="IsQuantityAvailable" class="text-danger"></span>
                </div> *@
                <div class="form-group">
                    <label asp-for="ProductAvailable" class="control-label"></label>
                    <input asp-for="ProductAvailable" class="form-control" required />
                    <span asp-validation-for="ProductAvailable" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

    </body>
</html>
