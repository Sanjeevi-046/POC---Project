@model POC.MVC.Models.UserVm
@{
    ViewData["Title"] = "Profile";
}
@if (TempData["Error"] !=null){
    <div class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
               @TempData["Error"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    
}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile</h4>
                </div>
                <form asp-action="profile" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="First name"  readonly/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Surname</label>
                            <input asp-for="Surname" type="text" class="form-control" placeholder="Surname" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Mobile Number</label>
                            <input asp-for="MobileNumber" type="number" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Address</label>
                            <input asp-for="Address" type="text" class="form-control" placeholder="Enter the address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Postcode</label>
                            <input asp-for="Postcode" type="number" class="form-control" placeholder="Enter postcode" />
                            <span asp-validation-for="Postcode" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">State</label>
                            <select asp-for="State" class="form-control">
                                <option value="Tamil Nadu">Tamil Nadu</option>
                                <option value="Kerala">Kerala</option>
                                <option value="Karnataka">Karnataka</option>
                            </select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="labels">Country</label>
                            <select asp-for="Country" class="form-control">
                                <option value="India">India</option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Email ID</label>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Enter email ID" readonly/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col text-center">
                            <button class="btn btn-primary profile-button" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


